@require "normalize"
//bg-blue = #00BCD4 
//bg-blue = #03A9F4
bg-blue = #2196F3
fg-default = #212121 

*
    box-sizing border-box
#holder,body,html
    position relative
    height 100%
    width 100%
    color fg-default


.base
    position relative
    height 100%
    width 100%
    display flex
    flex-direction row
    background-color bg-blue


.base-section
    position relative
    height 100%
    flex-grow 1
    border 1px solid #E0E0E0 


.base-section.mod-left
    padding-top 60px

.base-fields
    position relative
    height 500px
    border 1px solid #FCE4EC
    padding 0px 20px

.base-fields-item
    position relatative
    width 100%
    height 90px
    border 1px solid #F8BBD0 
    margin 10px auto

.base-fields-item-label
    position relatative
    height 50%
    width 100%
    border 1px solid #F48FB1 

.base-fields-item-input
    position relative
    width 100%
    height 50%
    border 1px solid #F06292 

.base-section.mod-middle
    flex-grow 3
    padding-top 100px

.base-prompt
    position relative
    height 300px
    width 600px
    display flex
    flex-direction column
    margin 0 auto
    border 1px solid #E0F2F1 

.base-prompt-label
    position relative
    height 40%
    width 300px
    margin 0 auto
    border 1px solid #B2DFDB

    p
        position relative
        top 50%
        transform translate(0,-50%)
        margin 0 auto
        text-align center
        padding-bottom 40px
        border-bottom 1px solid #80CBC4 


.base-prompt-input
    flex-grow 1
    width 500px
    margin 0 auto
    
    input
        position relative
        width 100%
        margin 0 auto
        height 60px
        border none
        padding 10px


.base-keyboard
    position relative
    height 350px
    width 900px
    margin 0 auto

.base-keyboard-row
    height 60px
    display flex
    margin-top 20px
    flex-direction row
    justify-content center
    flex-wrap wrap

.key
    position relative
    height 70px
    width 70px
    background-color #FFFFFF 
    border-radius 90px
    margin-left 5px
    margin-right 5px
    box-shadow 1px 3px 5px 1px rgba(66, 66, 66, 0.50) 

    &:hover
        box-shadow 1px 1px 0px 1px rgba(66, 66, 66, 0.50) 
        background-color #F5F5F5 

    &:active
        background-color #D7CCC8 
    p
        height 10px
        width 10px
        margin 0
        padding 0
        top 30%
        left 60%
        transform translate(-50%,-50%)
        position relative
        font-family Raleway
        font-size 30px
        font-weight 500
        color #66665E 

.key.mod-space
    width 500px
    margin-top 10px

.base-monitor
    position relative
    height 50px
    width 50px
    margin 0 auto
    border 1px solid red

.base-monitor-ring

.base-caption
    position relative
    height 25px
    width 200px
    margin 0 auto

    p
        width 100%
        text-align center
        font-size 25px
        font-weight 500
