.base-monitor-ring
    position relative
    height 60px
    width 60psx
    border 2px solid #FF7043 
    border-radius 50px

.base-monitor-ring-center
    position relative
    height 15px
    width 15px
    top 50%
    left 50%
    transform translate(-50%,-50%)
    border-radius 20px
    background-color #F44336 

@-webkit-keyframes pulse
    from { 
        transform scale(1,1)
        opacity 1
    }
    to   { 
        transform scale(4.25,4.25)
        opacity 0
    }

.base-monitor-ring-center:after
    position absolute
    opacity 1
    content ""
    top 0px
    left 0px
    height 100%
    width 100%
    background-color #F44336
    border-radius 40px
    animation pulse 0.7s linear infinite

@-webkit-keyframes orbit {
    from {
        -webkit-transform: rotate(0deg) translateX(30px) rotate(0deg)
    }
    to {
        -webkit-transform: rotate(360deg) translateX(30px) rotate(-360deg)
    }
}

.base-monitor-ring-orbit
    position absolute
    top 25px
    left 25px
    height 10px
    width 10px
    border-radius 30px
    transform rotate(45deg) translateX(30px)
    animation orbit 2s linear infinite
    background-color orbit-color

