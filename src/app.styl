@require "normalize"
//bg-blue = #00BCD4 
//bg-blue = #03A9F4
bg-blue = #2196F3
fg-default = #212121 

*
    box-sizing border-box
#holder,body,html
    position relative
    height 100%
    width 100%
    color fg-default
    font-family "Open Sans"


.base
    position relative
    height 100%
    width 100%
    display flex
    flex-direction row
    background-color bg-blue


.base-section
    position relative
    height 100%
    flex-grow 1
    border 1px solid rgba(255, 255, 255, 0.27) 


.base-section.mod-left
    padding-top 60px

.base-fields
    position relative
    height 500px
    border 1px solid rgba(255, 255, 255, 0.27) 
    padding 0px 20px

.base-fields-item
    position relative
    width 100%
    height 90px
    margin 10px auto
    border 1px solid rgba(255, 255, 255, 0.27) 

.base-fields-item-label
    position relatative
    width 100%
    font-size 24px
    font-weight 500
    color rgb(115, 115, 115) 

.base-fields-item-input
    position relative
    width 100%

    input
        position relative
        width 100%
        margin 0 auto
        height 60px
        border none
        padding 10px
        background-color transparent
        border-bottom 2px solid green

.base-section.mod-middle
    flex-grow 3
    padding-top 100px

.base-prompt
    position relative
    height 300px
    width 600px
    display flex
    flex-direction column
    margin 0 auto
    border 1px solid rgba(255, 255, 255, 0.27) 

.base-prompt-label
    position relative
    height 40%
    width 300px
    margin 0 auto
    border 1px solid rgba(255, 255, 255, 0.27) 

    p
        position relative
        top 50%
        transform translate(0,-50%)
        margin 0 auto
        text-align center
        padding-bottom 40px
        border-bottom 1px solid rgba(255, 255, 255, 0.27) 
        font-size 50px
        font-family Raleway
        color #263238 


.base-prompt-input
    flex-grow 1
    width 500px
    margin 0 auto
    
    input
        position relative
        width 100%
        margin 0 auto
        height 60px
        border none
        padding 10px


.base-keyboard
    position relative
    height 350px
    width 900px
    margin 0 auto
    border 1px solid rgba(255, 255, 255, 0.27) 

.base-keyboard-row
    display flex
    margin-top 10px
    flex-direction row
    justify-content center
    flex-wrap wrap

.pressed
    border 1px solid red
    background-color #D7CCC8 

.key
    position relative
    height 70px
    width 70px
    background-color #FFFFFF 
    border-radius 90px
    margin-left 5px
    margin-right 5px
    box-shadow 1px 3px 5px 1px rgba(66, 66, 66, 0.50) 

    &:hover
        box-shadow 1px 1px 0px 1px rgba(66, 66, 66, 0.50) 
        background-color #F5F5F5 

    p
        height 10px
        width 10px
        margin 0
        padding 0
        top 30%
        left 60%
        transform translate(-50%,-50%)
        position relative
        font-family Raleway
        font-size 30px
        font-weight 500
        color #66665E 

.key.mod-space
    width 500px

.base-monitor
    position relative
    height 60px
    width 60px
    margin 0 auto
    margin-top 20px

.base-monitor-ring
    position relative
    height 60px
    width 60psx
    border 2px solid #FF7043 
    border-radius 50px

.base-monitor-ring-center
    position relative
    height 15px
    width 15px
    top 50%
    left 50%
    transform translate(-50%,-50%)
    border-radius 20px
    background-color #F44336 


@-webkit-keyframes pulse
    from { 
        transform scale(1,1)
        opacity 1
    }
    to   { 
        transform scale(4.25,4.25)
        opacity 0
    }

.base-monitor-ring-center:after
    position absolute
    opacity 1
    content ""
    top 0px
    left 0px
    height 100%
    width 100%
    background-color #F44336
    border-radius 40px
    animation pulse 0.7s linear infinite



@-webkit-keyframes orbit2 {
    from {
        -webkit-transform: rotate(0deg) translateX(30px) rotate(0deg)
    }
    to {
        -webkit-transform: rotate(360deg) translateX(30px) rotate(-360deg)
    }
}

.base-monitor-ring-orbit
    position absolute
    top 25px
    left 25px
    height 10px
    width 10px
    border-radius 30px
    transform rotate(45deg) translateX(30px)
    animation orbit2 2s linear infinite
    background-color green

.base-caption
    position relative
    height 25px
    width 200px
    margin 0 auto

    p
        width 100%
        text-align center
        font-size 25px
        font-weight 500
