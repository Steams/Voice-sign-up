.key
    position relative
    height 70px
    width 70px
    background-color key-bg
    border-radius 90px
    margin-left 5px
    margin-right 5px
    box-shadow 1px 3px 5px 1px key-shadow
    transform translate(-1px,-1px)

    &:hover
        box-shadow 1px 1px 0px 0px key-shadow
        transform translate(0px,0px)

    p
        position relative
        height 10px
        width 10px
        margin 0
        padding 0
        top 50%
        left 50%
        line-height 10px
        transform translate(-50%,-50%)
        font-family Raleway
        font-size 30px
        font-weight 500
        color key-fg
        text-shadow 2px 2px 3px rgba(66, 66, 66, 0.20)


@-webkit-keyframes key-pulse{

    0% {
        opacity 0
        height 0px
        width 0px
    }

    20% {
        opacity 0.7
        height 50%
        width 50%
    }

    100% {
        opacity 0.3
        height 120%
        width 120%
    }

}

.key:after
    position absolute
    content ""
    opacity 0
    top 50%
    left 50%
    height 1px
    width 1px
    transform translate(-50%,-50%)
    border-radius 90px
    background-color key-accent



.pressed
    box-shadow 1px 1px 0px 0px key-shadow
    transform translate(0px,0px)

    p
        -webkit-filter brightness(1.5)

.pressed:after
    animation key-pulse 0.3s 
    animation-iteration-count 1
    animation-timing-function linear


