.base.mod-welcome
    .welcome-hero
        .welcome-hero-header WELCOME
        .welcome-hero-body
            .welcome-hero-body-pre ~ TO ~
            .welcome-hero-body-title(data-text="{ COMPUTING SOCIETY }") { COMPUTING SOCIETY }

    .welcome-monitor-holder
        .monitor.mod-welcome.js-monitor.isTransitioning
            .monitor-ring
                .monitor-ring-center
                .monitor-ring-orbit
            .monitor-caption
                p Listening...

    .welcome-body
        .welcome-body-prompt
            .welcome-body-prompt-words " Sign me up "
            .welcome-body-prompt-decoration {{decoration}}
            .welcome-body-recent-ribbon
        .welcome-body-recent
            .welcome-body-recent-header(data-heading="Pelican" data-title="{{images[picIndex-1].title}}")
            .welcome-body-slideshow
              ul.welcome-body-image-holder
                li.welcome-body-image.current
                  .img(image='')
                li.welcome-body-image.next
                  .img(imageNext='')

